# SocioMint 生产环境配置模板
# 复制此文件为 .env.production 并填入真实值

# Supabase 配置（生产数据库）
NEXT_PUBLIC_SUPABASE_URL=https://your-production-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# 区块链配置（主网）
NEXT_PUBLIC_CHAIN_ID=56
NEXT_PUBLIC_RPC_URL=https://bsc-dataseed1.binance.org/
NEXT_PUBLIC_CHAIN_NAME=BSC Mainnet

# 智能合约地址（主网）
NEXT_PUBLIC_SM_TOKEN_ADDRESS=your-mainnet-token-address
NEXT_PUBLIC_SM_EXCHANGE_ADDRESS=your-mainnet-exchange-address

# 代币配置
NEXT_PUBLIC_SM_TOKEN_SYMBOL=SM
NEXT_PUBLIC_SM_TOKEN_DECIMALS=18
NEXT_PUBLIC_INITIAL_PRICE=0.000000833
NEXT_PUBLIC_PRICE_INCREMENT=0.0000001419

# API 配置
NEXT_PUBLIC_API_BASE_URL=https://your-domain.com/api
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-secure-nextauth-secret

# 生产环境配置
NODE_ENV=production
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_TEST_MODE=false

# 社交平台 API 配置
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# 第三方服务配置
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-key

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password

# Redis 配置
REDIS_URL=redis://your-redis-url:6379

# 监控和日志配置
SENTRY_DSN=your-production-sentry-dsn
LOG_LEVEL=warn

# 安全配置
JWT_SECRET=your-production-jwt-secret
ENCRYPTION_KEY=your-production-encryption-key

# 文件上传配置
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# 速率限制配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# 功能开关
NEXT_PUBLIC_ENABLE_STAKING=true
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_TREASURE_BOXES=true
NEXT_PUBLIC_ENABLE_SOCIAL_TASKS=true

# 性能配置
NEXT_PUBLIC_CDN_URL=https://your-cdn-url.com
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# 分析和追踪
GOOGLE_ANALYTICS_ID=your-ga-id
FACEBOOK_PIXEL_ID=your-fb-pixel-id

# 备份配置
DATABASE_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
